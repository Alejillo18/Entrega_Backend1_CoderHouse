<div>
    <h1>Productos</h1>
    <div id= "productosRealTime">
    </div>
</div>

<h2>Formulario Para agregar Productos</h2>
<div class="form-container">
    <h3>Añadir Nuevo Producto</h2>
    
    <form id="addProductForm">
        <div class="form-group">
            <label for="title">Título:</label>
            <input type="text" id="title" name="title" placeholder="AMD Ryzen 7 7800X3D" required>
        </div>

        <div class="form-group">
            <label for="description">Descripción:</label>
            <textarea id="description" name="description" rows="3" placeholder="Procesador con tecnología 3D V-Cache para máximo rendimiento en gaming." required></textarea>
        </div>

        <div class="form-group">
            <label for="code">Código:</label>
            <input type="text" id="code" name="code" placeholder="CPU-5" required>
        </div>

        <div class="form-group">
            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" step="0.01" min="0" placeholder="450000" required>
        </div>

        <div class="form-group">
            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" min="0" placeholder="6" required>
        </div>

        <div class="form-group">
            <label for="category">Categoría:</label>
            <input type="text" id="category" name="category" placeholder="cpus" required>
        </div>
        
        <div class="form-group">
            <label for="thumbnails">URL de Imagen (Thumbnail):</label>
            <input type="url" id="thumbnails" name="thumbnails" placeholder="https://ejemplo.com/imagen.jpg">
            <small>Se recomienda ingresar al menos una URL.</small>
        </div>

        <button type="submit" class="submit-btn">Agregar Producto</button>
    </form>
    
    <div id="formMessage"></div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>